<div class="container mt-5">
  <div class="d-flex align-items-center border-bottom pb-3">
    <%= link_to :back do %>
      <i class="fas fa-arrow-left me-2"></i>
    <% end %>
    <h1 class="m-0">Your Cart</h1>
  </div>

  <div class="cart-container d-flex flex-column justify-content-between" data-controller="cart">
    <div class="cart-products">
      <% if @order.nil? || @order.order_items.empty? %>
        <p>Your cart is empty :( </p>
        <%= link_to 'Browse Products', products_path, class: 'btn btn-success' %>
      <% else %>
        <% @order.order_items.each do |order_item| %>
          <div class="cart-product-card"
                data-controller="cart-item"
                data-cart-item-item-id-value="<%= order_item.id %>"
                data-cart-item-product-id-value="<%= order_item.product.id %>">
            <% if order_item.product.photos.empty? %>
              <%= image_tag "https://images.unsplash.com/photo-1457573399415-1154bfe3ff71?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", alt: "Buds" %>
            <% else %>
              <%= cl_image_tag order_item.product.photos.first.key, alt: order_item.product.name %>
            <% end %>
            <p><%= order_item.product.name %></p>
            <div class="quantity-controls">
              <!-- <button class="decrease-quantity" data-action="cart-item#decrease">-</button> -->
              <i class="fa-solid fa-square-minus fa-lg" data-action="click->cart-item#decrease"></i>
              <span class="quantity mx-1" data-cart-item-target="quantity"><%= order_item.quantity %></span>
              <!-- <button class="increase-quantity" data-action="cart-item#increase">+</button> -->
              <i class="fa-solid fa-square-plus fa-lg" data-action="click->cart-item#increase"></i>

            </div>
            <%# = link_to remove_from_cart_product_path(order_item.product), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to remove this item?' } do %>
              <!-- <i class="fas fa-trash-alt text-danger"></i> -->
            <%#  end %>
            <i class="fas fa-trash-alt text-danger" data-action="click->cart-item#removeItem"></i>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="cart-total-confirm d-flex align-items-center justify-content-between border-top">
      <p class="m-0" data-cart-target="total">Total: <%= @order.total_price %> </p>
      <button class="btn btn-success">Confirm order</button>
    </div>
  </div>
</div>
